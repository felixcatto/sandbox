<div class="posts">
  <div class="container">
    <h2>
      <div class="posts__title-text">Our Posts</div>
      <img src="/img/emoji.jpg" class="posts__img">
    </h2>
    <p>
      <a href="/posts/new">Create New Post</a>
    </p>
    <ul>
      {{#each data.posts}}
        <li>
          <span>{{id}}:</span>
          <span>{{title}}</span>

          <a href="/posts/{{id}}/show">(Show</a>
          <a href="/posts/{{id}}/edit">Edit</a>
          <form method="POST" class="pseudo-form" action="/posts/{{id}}?_method=DELETE">
            <button type="submit" class="pseudo-form__link">Delete)</button>
          </form>
        </li>
      {{/each}}
    </ul>
    <p>Total: {{postsCount}}</p>
  </div>
</div>

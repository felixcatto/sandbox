<div class="container">
  <h2>Hello, bro, do you wanna sign here?</h2>
  <form method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" name="name" class="form-control" value="{{data.form.name}}">
      {{#if data.errors.name}}
        <div class="alert alert-danger">{{data.errors.name}}</div>
      {{/if}}
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name="pass" class="form-control">
      {{#if data.errors.pass}}
        <div class="alert alert-danger">{{data.errors.pass}}</div>
      {{/if}}
    </div>
    <a href="/posts" class="btn btn-default">Cancel</a>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
